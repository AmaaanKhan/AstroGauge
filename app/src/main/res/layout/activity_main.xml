<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with Glow Effect -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AstroGauge"
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="0.08"
                android:shadowColor="#4A90E2"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="20" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If only we could replace every gun with a telescope."
                android:textSize="13sp"
                android:textColor="#9CA3AF"
                android:paddingTop="6dp"
                android:fontFamily="sans-serif"
                android:alpha="0.9"
                android:lineSpacingExtra="3dp" />
        </LinearLayout>

        <!-- Moon Phase Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#CC1E2742"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/card_glass_effect">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŒ™ Moon Phase"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/status_indicator" />
                </LinearLayout>

                <Button
                    android:id="@+id/getMoonPhaseButton"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="Get Moon Phase"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_glass"
                    android:elevation="4dp" />

                <!-- Moon Phase Display -->
                <LinearLayout
                    android:id="@+id/moonPhaseDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="16dp">

                    <!-- Moon Icon and Phase Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp">

                        <TextView
                            android:id="@+id/moonPhaseIcon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:text="ðŸŒ•"
                            android:textSize="48sp"
                            android:gravity="center" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="16dp">

                            <TextView
                                android:id="@+id/moonPhaseName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Full Moon"
                                android:textSize="20sp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/moonIllumination"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100% Illuminated"
                                android:textSize="14sp"
                                android:textColor="#64B5F6"
                                android:paddingTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Moon Rise/Set Times -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:background="@drawable/info_box">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Moonrise:"
                                android:textSize="14sp"
                                android:textColor="#A5B4FC" />

                            <TextView
                                android:id="@+id/moonriseTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--:--"
                                android:textSize="14sp"
                                android:textColor="#E0E7FF"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Moonset:"
                                android:textSize="14sp"
                                android:textColor="#A5B4FC" />

                            <TextView
                                android:id="@+id/moonsetTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--:--"
                                android:textSize="14sp"
                                android:textColor="#E0E7FF"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Observation Quality -->
                    <TextView
                        android:id="@+id/moonObservationQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒŸ Excellent for lunar observation!"
                        android:textSize="14sp"
                        android:textColor="#4ADE80"
                        android:paddingTop="12dp"
                        android:gravity="center"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/whyMoonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Why does this matter?"
                    android:textSize="13sp"
                    android:textColor="#A5B4FC"
                    android:paddingTop="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="48dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/whyMoonExplanation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Moon phase affects deep-sky observation. Full moon creates light pollution, while new moon provides the darkest skies for viewing galaxies and nebulae."
                    android:textSize="13sp"
                    android:textColor="#E0E7FF"
                    android:visibility="gone"
                    android:padding="14dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/info_box"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Cloud Cover Card with Glass Effect -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#CC1E2742"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/card_glass_effect">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â˜ï¸ Cloud Cover"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/status_indicator" />
                </LinearLayout>

                <Button
                    android:id="@+id/cloudCoverButton"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="Fetch Cloud Data"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_glass"
                    android:elevation="4dp" />

                <TextView
                    android:id="@+id/cloudCoverResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cloud Cover in your Region: --%"
                    android:textSize="16sp"
                    android:textColor="#64B5F6"
                    android:paddingTop="16dp"
                    android:visibility="gone"
                    android:drawablePadding="8dp" />

                <TextView
                    android:id="@+id/whyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Why does this matter?"
                    android:textSize="13sp"
                    android:textColor="#A5B4FC"
                    android:paddingTop="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="48dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/whyExplanation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cloud cover affects visibility in astrophotography. Less cloud cover means clearer skies."
                    android:textSize="13sp"
                    android:textColor="#E0E7FF"
                    android:visibility="gone"
                    android:padding="14dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/info_box"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Telescope Specs Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#CC1E2742"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/card_glass_effect">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ”­ Telescope Specs"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/status_indicator" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lens Thickness (mm)"
                    android:textSize="14sp"
                    android:textColor="#A5B4FC"
                    android:paddingBottom="10dp" />

                <EditText
                    android:id="@+id/lensInput"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:hint="Enter lens thickness"
                    android:inputType="numberDecimal"
                    android:padding="18dp"
                    android:background="@drawable/edittext_glass"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#6B7280"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/lensEnterButton"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="Submit Specifications"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_glass"
                    android:layout_marginTop="14dp"
                    android:elevation="4dp" />

                <TextView
                    android:id="@+id/lensResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your telescope lens thickness: -- mm"
                    android:textSize="16sp"
                    android:textColor="#64B5F6"
                    android:paddingTop="16dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/whyTelescopeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Why does this matter?"
                    android:textSize="13sp"
                    android:textColor="#A5B4FC"
                    android:paddingTop="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="48dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/whyTelescopeExplanation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Telescope lens thickness impacts light-gathering ability, affecting astrophotography clarity."
                    android:textSize="13sp"
                    android:textColor="#E0E7FF"
                    android:visibility="gone"
                    android:padding="14dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/info_box"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Environmental Sensors Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#CC1E2742"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/card_glass_effect">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŒ¡ï¸ Environmental Sensors"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/status_indicator" />
                </LinearLayout>

                <!-- Temperature & Humidity -->
                <Button
                    android:id="@+id/fetchTempHumidityButton"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="Get Temperature &amp; Humidity"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_glass"
                    android:layout_marginBottom="12dp"
                    android:elevation="4dp" />

                <TextView
                    android:id="@+id/tempHumidityResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature: --Â°C, Humidity: --%"
                    android:textSize="16sp"
                    android:textColor="#64B5F6"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/whyTempHumidityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Why does this matter?"
                    android:textSize="13sp"
                    android:textColor="#A5B4FC"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="48dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/whyTempHumidityExplanation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Temperature and humidity affect air stability and lens fogging, crucial for clear telescopic observations."
                    android:textSize="13sp"
                    android:textColor="#E0E7FF"
                    android:visibility="gone"
                    android:padding="14dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/info_box"
                    android:lineSpacingExtra="4dp" />

                <!-- Light Sensor -->
                <Button
                    android:id="@+id/fetchLightButton"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="Get Ambient Light Value"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_glass"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="4dp" />

                <TextView
                    android:id="@+id/lightResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Light Value: --"
                    android:textSize="16sp"
                    android:textColor="#64B5F6"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/whyLightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Why does this matter?"
                    android:textSize="13sp"
                    android:textColor="#A5B4FC"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="48dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/whyLightExplanation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ambient light levels impact visibility of celestial objects and determine optimal exposure settings for astrophotography."
                    android:textSize="13sp"
                    android:textColor="#E0E7FF"
                    android:visibility="gone"
                    android:padding="14dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/info_box"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Observation Score Card with Premium Styling -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#CC1E2742"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/card_premium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â­ Observation Score"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/status_indicator_premium" />
                </LinearLayout>

                <Button
                    android:id="@+id/calculateScoreButton"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:text="Calculate Observation Score"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_premium"
                    android:enabled="false"
                    android:elevation="6dp" />

                <TextView
                    android:id="@+id/scoreResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Observation Score: --/10"
                    android:textSize="28sp"
                    android:textColor="#4ADE80"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:visibility="gone"
                    android:shadowColor="#4ADE80"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="12" />

                <TextView
                    android:id="@+id/whyScoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ How is this calculated?"
                    android:textSize="13sp"
                    android:textColor="#A5B4FC"
                    android:paddingTop="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="48dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/whyScoreExplanation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Score considers cloud cover, telescope specs, temperature, humidity and light pollution. Each parameter is rated 1-4 (worst-best), converted to 10-point scale and averaged."
                    android:textSize="13sp"
                    android:textColor="#E0E7FF"
                    android:visibility="gone"
                    android:padding="14dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/info_box"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Premium Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="20dp">

            <View
                android:layout_width="80dp"
                android:layout_height="4dp"
                android:background="@drawable/footer_line"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEVELOPED BY"
                android:textSize="10sp"
                android:textColor="#6B7280"
                android:letterSpacing="0.15"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
